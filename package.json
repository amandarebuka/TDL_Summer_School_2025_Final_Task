{
  "name": "TDL-WEB-AUTO-2025",
  "type": "module",
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@babel/register": "^7.27.1",
    "@wdio/cli": "^9.16.2",
    "@wdio/cucumber-framework": "^9.16.2",
    "@wdio/local-runner": "^9.16.2",
    "@wdio/spec-reporter": "^9.16.2",
    "multiple-cucumber-html-reporter": "^3.9.3",
    "prettier": "^3.6.2",
    "wdio-cucumberjs-json-reporter": "^6.0.1",
    "wdio-wait-for": "^3.1.0"
  },
  "scripts": {
    "wdio": "wdio run ./wdio.conf.js",
    "wdio:tag": "wdio run ./wdio.conf.js --cucumberOpts.tagExpression",
    "format": "npx prettier --write .",
    "test": "wdio run ./wdio.conf.js --cucumberOpts.tagExpression @FINAL-TASK" ,
    "open": "open .tmp/report/index.html"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  }
}
